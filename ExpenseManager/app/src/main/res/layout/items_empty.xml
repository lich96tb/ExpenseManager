<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_empty"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/large_150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_empty_box"
        />

    <TextView
        android:id="@+id/text_title_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="@string/title_items_empty"
        android:textSize="@dimen/text_large"
        android:padding="@dimen/small_100"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/image_empty"
        app:layout_constraintTop_toBottomOf="@+id/image_empty"
        app:layout_constraintEnd_toEndOf="@id/image_empty"
        />

    <Button
        android:id="@+id/button_create_new"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_normal_button"
        android:layout_marginTop="28dp"
        android:text="@string/create_new"
        style="@style/NormalButton"
        app:layout_constraintEnd_toEndOf="@+id/text_title_empty"
        app:layout_constraintStart_toStartOf="@+id/text_title_empty"
        app:layout_constraintTop_toBottomOf="@+id/text_title_empty" />
</android.support.constraint.ConstraintLayout>