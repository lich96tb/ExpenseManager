        <!--<item name="android:editTextColor">#000000</item>-->
        <!--<item name="android:textColor">#252323</item>-->
    <!--</style>-->




    <!-- TextView -->

    <style name="TextToolBar">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTitleToolbar" parent="TextToolBar">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextTitleContent">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextTitleContentBold" parent="TextTitleContent">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>

    </style>

    <style name="TextItemName">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextPrice">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextTitleDialog">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/normal_100</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!-- EditText -->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- CardView -->

    <style name="CardViewLayout" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">@dimen/small_100</item>
        <item name="contentPaddingTop">@dimen/small_100</item>
        <item name="contentPaddingLeft">@dimen/small_100</item>
        <item name="contentPaddingRight">@dimen/small_100</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
    </style>


    <!-- Check box -->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- Button -->
    <style name="MySelectorButton">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="NormalButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/selector_normal_button</item>
    </style>

    <style name="ButtonDialog">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
